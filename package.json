{
    "name": "cowtracker",
    "productName": "Hayvan Yönetimi",
    "version": "1.1.7",
    "main": "src/main.js",
    "scripts": {
        "start": "electron .",
        "build": "electron-builder",
        "watch:css": "npx @tailwindcss/cli -i ./styles/input.css -o ./styles/output.css --watch",
        "postinstall": "electron-builder install-app-deps"
    },
    "build": {
        "appId": "com.muhammedkolee.cowtracker",
        "artifactName": "${name}-Setup-${version}.${ext}",
        "publish": {
            "provider": "github",
            "owner": "muhammedkolee",
            "repo": "cowTracker"
        },
        "productName": "Hayvan Yönetimi",
        "copyright": "Copyright © Muhammed Kole",
        "directories": {
            "output": "dist"
        },
        "files": [
            "src/**/*",
            "icon.ico",
            "styles/**/*",
            "views/**/*",
            "backend/**/*"
        ],
        "win": {
            "target": "nsis",
            "artifactName": "${name}-Setup-${version}.${ext}",
            "icon": "icon.ico"
        },
        "nsis": {
            "oneClick": false,
            "perMachine": true,
            "createDesktopShortcut": true,
            "createStartMenuShortcut": true,
            "shortcutName": "Hayvan Yönetimi",
            "license": "license.md",
            "runAfterFinish": true,
            "differentialPackage": true
        }
    },
    "keywords": [
        "cow",
        "tracker",
        "farm",
        "animal management",
        "desktop app"
    ],
    "author": "Muhammed Kole",
    "description": "A simple desktop app for cow tracking.",
    "devDependencies": {
        "@tailwindcss/cli": "^4.1.12",
        "electron": "^35.7.2",
        "electron-builder": "^26.0.12",
        "electron-rebuild": "^3.2.9"
    },
    "dependencies": {
        "@supabase/supabase-js": "^2.50.3",
        "electron-log": "^5.4.3",
        "electron-store": "^10.1.0",
        "electron-updater": "^6.6.2"
    }
}
